# IPTV M3U Sorter Configuration - FIXED

# Basic Settings
FLASK_ENV=production
FLASK_DEBUG=0
HOST_PORT=5000

# Security Settings (WICHTIG: SECRET_KEY für Production ändern!)
SECRET_KEY=your-super-secret-key-change-this-in-production
MAX_FILE_SIZE=52428800
HTTPS_ENABLED=true

# Reverse Proxy Settings für iptv.home-lab.li
URL_SCHEME=https
# SERVER_NAME leer lassen für localhost, oder Domain setzen
# SERVER_NAME=iptv.home-lab.li
APP_ROOT=/
DOMAIN=iptv.home-lab.li

# User ID Settings (wichtig für Dateiberechtigungen auf Linux)
USER_UID=1000
USER_GID=1000

# Proxy Fix Settings (für Reverse Proxies wie Caddy/Nginx)
PROXY_FIX_X_FOR=1
PROXY_FIX_X_PROTO=1
PROXY_FIX_X_HOST=1
PROXY_FIX_X_PREFIX=1

# Security Headers
SECURE_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# Health Check Settings (Optional)
ENABLE_FS_HEALTH_CHECKS=false

# Gunicorn Performance Settings
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
TIMEOUT=120

# File Storage Paths
UPLOAD_FOLDER=uploads
SAVED_PLAYLISTS_FOLDER=saved_playlists